apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: flask # Application name
  namespace: argocd # Must be in argocd namespace for App of Apps pattern
spec:
  project: default
  destination:
    server: https://kubernetes.default.svc
    namespace: flask-namespace
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
  source:
    path: charts/flask
    repoURL: https://github.com/preranabl/flask-chart.git
    targetRevision: master